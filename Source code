<body>
  <div class="player">
    <h1>üé∂ Dhanush Hits üé∂</h1>
    <audio id="audio"></audio>
    <h2 id="song-title">Loading...</h2>

    <div class="progress">
      <div class="progress-bar" id="progress-bar"></div>
    </div>

    <button onclick="prevSong()">‚èÆ Prev</button>
    <button onclick="playSong()">‚ñ∂ Play</button>
    <button onclick="pauseSong()">‚è∏ Pause</button>
    <button onclick="nextSong()">‚è≠ Next</button>
  </div>

  <div class="wave">
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
  </div>

  <script>
    const audio = document.getElementById("audio");
    const progressBar = document.getElementById("progress-bar");
    const songTitle = document.getElementById("song-title");

    // üéµ Playlist
    const songs = [
      { title: "Kannu Rendum", file: "https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" },
      { title: "Rowdy Baby", file: "https://www.soundhelix.com/examples/mp3/SoundHelix-Song-2.mp3" },
      { title: "Why This Kolaveri", file: "https://www.soundhelix.com/examples/mp3/SoundHelix-Song-3.mp3" },
      { title: "Megham Karukatha", file: "https://www.soundhelix.com/examples/mp3/SoundHelix-Song-4.mp3" },
      { title: "VIP Theme", file: "https://www.soundhelix.com/examples/mp3/SoundHelix-Song-5.mp3" }
    ];

    let currentSong = 0;

    function loadSong(index) {
      audio.src = songs[index].file;
      songTitle.textContent = songs[index].title;
      audio.load();
    }

    function playSong() { audio.play(); }
    function pauseSong() { audio.pause(); }
    function nextSong() {
      currentSong = (currentSong + 1) % songs.length;
      loadSong(currentSong);
      playSong();
    }
    function prevSong() {
      currentSong = (currentSong - 1 + songs.length) % songs.length;
      loadSong(currentSong);
      playSong();
    }

    // Update progress bar
    audio.ontimeupdate = function() {
      if (audio.duration) {
        const progress = (audio.currentTime / audio.duration) * 100;
        progressBar.style.width = progress + "%";
      }
    };

    // Auto next after song ends
    audio.onended = function() { nextSong(); };

    // Load first song
    loadSong(currentSong);
  </script>
</body>
